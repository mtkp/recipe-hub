<%= form_for([@recipe, @instruction]) do |f| %>
  <%= render 'layouts/errors', object: @instruction %>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 4, class: "form-control" %>
  </div> 
  <%= f.submit "Create", class: "btn btn-success pull-left" %>
<% end %>
