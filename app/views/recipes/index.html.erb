<h2>Recipes index for <%= @user.username %></h2>

<% if @recipes.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Notes</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr>
          <td><%= truncate(recipe.title, length: 80) %></td>
          <td><%= truncate(recipe.notes, length: 80) %></td>
          <td><%= link_to 'Show', recipe %></td>
          <% if @user == current_user %>
            <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>  
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No recipes!</p>
<% end %>

<br>
<% if @user == current_user %>
  <%= link_to 'New Recipe', new_recipe_path %> |
<% end %>
<%= link_to "Back to profile for #{@user.username}", @user %>
