<div id="recipes">
  <h3>Recipes index for <%= link_to @user.username, @user %></h3>
  <% if @recipes.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Title</th>
          <th>Notes</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @recipes.each do |recipe| %>
          <tr>
            <td><%= link_to truncate(recipe.title, length: 80), recipe %></td>
            <td><%= truncate(recipe.notes, length: 80) %></td>
            <% if @user == current_user %>
              <td><small>
                <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' } %>
              </small></td>  
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p><em>No recipes yet...</em></p>
  <% end %>

  <% if @user == current_user %>
    <%= link_to 'Create New Recipe', new_recipe_path, class: "btn btn-success" %>
  <% end %>
</div>
