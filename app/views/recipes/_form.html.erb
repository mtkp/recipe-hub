<%= form_for(@recipe) do |f| %>
  <%= render 'layouts/errors', object: @recipe %>

  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :notes, "Notes" %>
    <%= f.text_area :notes, rows: 3, class: "form-control",
        placeholder: "... a short description and the yield of the recipe" %>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, "Tags (separate with commas)" %>
    <%= f.text_field :tag_list, class: "form-control" %>
  </div>
  <div class="actions">
  <%= f.submit "Submit", class: "btn btn-success pull-right" %>
  </div>
<% end %>

<%= link_to 'Cancel', :back, class: "btn btn-default pull-left" %>
