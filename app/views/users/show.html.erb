<div id="profile" class="row">
  <div class="col-md-2 col-sm-3">
    <div><%= gravatar_for(@user) %></div>
    <h6><%= @user.username %></h6>
    <% if current_user == @user %>
      <h6><%= @user.email %></h6>
    <% end %>
  </div>
  <div class="col-md-10 col-sm-9">
    <% if current_user == @user %>
      <h3>Welcome <%= @user.username %>. This is your profile page.</h3>
      <%= link_to "View all your recipes", user_recipes_path(@user) %> |
      <%= link_to "View your starred recipes", user_stars_path(@user) %> |
      <%= link_to "Edit your account", edit_user_registration_path %>
    <% else %>
      <h3>You are viewing the profile page for <%= @user.username %></h3>
      <%= link_to "View recipes", user_recipes_path(@user) %> |
      <%= link_to "View stars", user_stars_path(@user) %>
    <% end %>
    
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Recent recipes</h3>
      </div>
      <div class="panel-body">
        <% if @recent_recipes.any? %>
          <% @recent_recipes.each do |recipe| %>
            <%= render recipe %>
          <% end %>
        <% else %>
          <em>No recipes yet...</em>
        <% end %>
      </div>
    </div>
  </div>
</div>