<div class="profile row">
  <% if current_user == @user %>
    <div class="col-md-2 col-sm-3">
      <div><%= gravatar_for(@user) %></div>
      <h6><%= @user.username %></h6>
      <h6><%= @user.email %></h6>
    </div>
    <div class="col-md-10 col-sm-9">
      <h3>Welcome <%= @user.username %>. This is your profile page.</h3>
      <%= link_to "View all your recipes", user_recipes_path(@user) %> |
      <%= link_to "View your starred recipes", user_stars_path(@user) %> |
      <%= link_to "Edit your account", edit_user_registration_path %>
      <div class="panel panel-default pad-top">
        <div class="panel-heading">
          <h3 class="panel-title">Recent recipes</h3>
        </div>
        <div class="panel-body">
          <% @recent_recipes.each do |recipe| %>
            <%= render recipe %>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <h3>You are viewing the profile page for <%= @user.username %></h3>
    <%= gravatar_for(@user) %>
    <p><%= link_to "View #{@user.username}'s recipes", user_recipes_path(@user) %></p>
    <p><%= link_to "View #{@user.username}'s stars", user_stars_path(@user) %></p>
  <% end %>
</div>