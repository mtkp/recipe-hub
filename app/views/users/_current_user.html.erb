<p class="navbar-text pull-right">
<% if user_signed_in? %>
  Signed in as <%= link_to current_user.username, current_user, class: "navbar-link" %>
    <%= link_to 'Sign out', sign_out_path, class: "navbar-link navbar-btn" %>
<% else %>
  New user? <%= link_to 'Sign up!', sign_up_path, class: "navbar-link" %>
    <%= link_to 'Sign in', sign_in_path, class: "navbar-link navbar-btn" %>
<% end %>
</p>