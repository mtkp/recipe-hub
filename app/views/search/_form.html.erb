<div id="search-form">
  <%= form_tag('/search', { method: "get", class: "form-inline" }) do |f| %>
    <div class="form-group">
      <%= label_tag :search_terms, "Find recipes", class: "sr-only" %>
      <%= search_field_tag :search_terms, params[:search_terms],
        { class: "form-control", placeholder: "Find recipes..." } %>
    </div>
    <%= submit_tag "Search", name: nil, class: "btn btn-success" %>
  <% end %>
</div>