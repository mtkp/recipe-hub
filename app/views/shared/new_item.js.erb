$('#<%= item.class.model_name.plural %> .new').
  html("<%= escape_javascript render( 'form' ) %>").
    append("<%= escape_javascript render('shared/cancel_btn') %>");
$('#<%= item.class.model_name.plural %> .new .cancel').click( function() {
  $(this).parent().
    html("<%= escape_javascript render('shared/new_btn', item: item.class.model_name.i18n_key) %>");
});
